<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_height="wrap_content"
    tools:context=".Fragment2"
    android:gravity="center"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/graph_1"
            android:text="@string/avr"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <com.androidplot.xy.XYPlot
            style="@style/FullScreenGraph.Minimalist.Dark"
            android:id="@+id/plot"
            android:layout_width="fill_parent"
            app:borderColor="#D80032"
            app:borderThickness="2dp"
            android:layout_height="25mm"
            />
        <View
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avl"
            android:gravity="center"
            android:id="@+id/graph_2"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            />
        <com.androidplot.xy.XYPlot
            style="@style/FullScreenGraph.Minimalist.Dark"
            android:id="@+id/plot1"
            app:borderColor="#D80032"
            app:borderThickness="2dp"
            android:layout_width="fill_parent"
            android:layout_height="25mm"
            />
        <View
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginVertical="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avf"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:id="@+id/graph_3"
            android:textColor="@color/black"
            />
        <com.androidplot.xy.XYPlot
            style="@style/FullScreenGraph.Minimalist.Dark"
            android:id="@+id/plot2"
            app:borderColor="#D80032"
            app:borderThickness="2dp"
            android:layout_width="fill_parent"
            android:layout_height="25mm"
            />
        <View
            android:layout_marginHorizontal="10dp"
            app:borderColor="#D80032"
            app:borderThickness="2dp"
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_height="3dp"
            android:background="@color/black"
            />


</LinearLayout>